{
	"manifest_version" : 2,
	"name" : "Печать справки по регистрации ЗО в ДРСС",
	"description" : "Ускоряет процесс печати справки на ЗО по его регистрации в ДРСС",
	"version" : "1.0.0",
	"permissions" : [ 
		"http://172.1.4.195:7777/*",
		"http://172.1.4.196:7777/*",
		"http://vk.com/*",
		"tabs", "notifications", "storage"
	],
	"browser_action" : {
		"default_title" : "Печать справки по регистрации ЗО в ДРСС",
		"default_icon"  : "icon.png",
		"default_popup" : "DRSSRegConfirm.html"
	},
	"background": {
		"scripts": ["background.js"]
	},
	"options_page": "settings.html",
	"content_scripts": [
		{
		"matches": [
			"http://172.1.4.195:7777/ikis/app/f?p=303*",
			"http://172.1.4.196:7777/ikis/app/f?p=303*",
			"http://vk.com/*"
			],
		"js": ["DRSSRegConfirm.js"]
		}
	],
	"web_accessible_resources": [
		"DRSSRegConfirm.js"
	],
	"homepage_url": "http://vk.com/drunia85",
	"icons" : { "128" : "icon.png" },
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}

